<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="52dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/bg1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_photo_id"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        android:src="@color/bg_notify"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="85dp"
                            app:cardCornerRadius="15dp"
                            app:contentPaddingBottom="15dp"
                            app:contentPaddingLeft="15dp"
                            app:contentPaddingRight="15dp"
                            app:contentPaddingTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_name_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="60dp"
                                    android:fontFamily="@font/pb"
                                    android:text="Unkhown name"
                                    android:textColor="@color/grey"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/emailTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/pb"
                                    android:text="Email"
                                    android:textColor="@color/grey"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/statusTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="6dp"
                                    android:fontFamily="@font/pr"
                                    android:paddingBottom="5dp"
                                    android:text="Class :: User"
                                    android:textSize="15sp" />

                                <Button
                                    android:id="@+id/logoutBut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/click"
                                    android:fontFamily="@font/pb"
                                    android:text="Sign Out"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/pb"
                        android:gravity="center"
                        android:text="My Event Management"
                        android:textColor="@color/bg_notify"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/waitingBut"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/icons_box" />

                            <TextView
                                android:id="@+id/textwaiting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/waitingBut"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/pr"
                                android:text="Waiting to Accept"
                                android:textColor="@color/bg_notify"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/waitingTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textwaiting"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/pr"
                                android:text="0"
                                android:textColor="@color/text"
                                android:textSize="20sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/acceptedBut"

                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/icons_tick" />

                            <TextView
                                android:id="@+id/Tvalreay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/acceptedBut"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/pr"

                                android:text="Accepted"
                                android:textColor="@color/bg_notify"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/alreadyAccTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Tvalreay"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/pr"
                                android:text="0"
                                android:textColor="@color/text"
                                android:textSize="20sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutadmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_notify2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/activitesTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pb"
                        android:paddingBottom="5dp"
                        android:text="Awaiting to Approve : "
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/adminBut"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/border_add"
                        android:fontFamily="@font/pb"
                        android:text="Management Activities"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutmanage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_notify2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <Button
                        android:id="@+id/userBut"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/border_add"
                        android:gravity="center"
                        android:text="User Management"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>