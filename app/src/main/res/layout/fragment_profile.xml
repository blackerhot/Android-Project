<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/backgr_profile"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/user_photo_id"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:src="@drawable/face"
          app:civ_border_width="2dp"
          app:civ_border_color="@color/white"
          android:layout_centerHorizontal="true"
          android:elevation="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    app:contentPaddingTop="15dp"
                    app:contentPaddingLeft="15dp"
                    app:contentPaddingRight="15dp"
                    app:contentPaddingBottom="15dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unkhown name"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:layout_marginTop="60dp"
                            android:layout_gravity="center_horizontal"
                            />
                        <TextView
                            android:id="@+id/emailTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/statusTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:layout_gravity="center_horizontal"
                            android:textSize="15sp"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/cardview_shadow_start_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Information"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imag_store"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                           android:src="@drawable/icon_box"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:id="@+id/num_favorite_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"

                            android:layout_below="@+id/imag_store"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/no_com_id"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/icon_activity"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:id="@+id/num_event_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:layout_below="@+id/no_com_id"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutadmin"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activitesTv"
                    android:layout_width="wrap_content"
                    android:text="Awaiting to Approve : "
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <Button
                    android:background="@drawable/click"
                    android:id="@+id/adminBut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Management Activities"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutmanage"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">


                <Button
                    android:background="@drawable/click"
                    android:id="@+id/userBut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Management"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"/>

            </LinearLayout>
            <Button
                android:background="@drawable/click"
                android:id="@+id/logoutBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>