<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/bgActivity"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/bgnotify"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="35dp">
            <TextView
                android:id="@+id/lstTime"
                android:layout_width="wrap_content"
                android:fontFamily="@font/pb"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textSize="35sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40dp">
                <TextView
                    android:id="@+id/lstTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pb"
                    android:text="Title"
                    android:inputType="textAutoComplete"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/lstItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pr"
                    android:text="message"
                    android:inputType="textAutoComplete"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>