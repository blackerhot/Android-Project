<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/bgActivity"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_notify2"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lsttime_other_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pb"
                android:gravity="center"
                android:text="10:00"
                android:textColor="@color/bg_notify"
                android:textSize="35dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lstdate_other_event"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pb"
                android:text="day"
                android:textColor="@color/grey"
                android:textSize="14dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lstTitle_other_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pb"
                    android:inputType="textAutoComplete"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white_grey"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lstItems_other_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/pr"
                android:inputType="textAutoComplete"
                android:text="message"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

