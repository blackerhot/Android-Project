<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout2"
    tools:context="edmt.dev.androidcollapsingtoolbar.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"

        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:id="@+id/collap"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/grey"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true"
            >

            <ImageView
                android:id="@+id/post_pic"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.CustomTheme"
                app:layout_collapseMode="pin"
                android:id="@+id/toolbar"


                />


        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@drawable/bgfeed">

                <TextView
                    android:id="@+id/post_title"
                    android:padding="12dp"
                    android:textSize="30sp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    android:fontFamily="@font/pb"
                    android:text="@string/recent_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_location"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:padding="12dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/post_address"
                        android:textColor="@color/colorPrimaryText"
                        android:text="Address"
                        android:fontFamily="@font/pb"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_calendar"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:padding="20dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/post_date"
                        android:textColor="@color/colorPrimaryText"
                        android:text="@string/publish_date"
                        android:fontFamily="@font/pb"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/end"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:padding="12dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/post_dateEnd"
                        android:textColor="@color/colorPrimaryText"
                        android:fontFamily="@font/pb"
                        android:text="@string/publish_date"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_web"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:padding="12dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/post_sponser"
                        android:fontFamily="@font/pb"
                        android:textColor="@color/colorPrimaryText"
                        android:text="ผู้จัด"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/post_detail"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pr"
                    android:text="@string/in_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_margin="5dp">
                    <ImageButton
                        android:id="@+id/post_phone"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/icon_phone"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/butAddEvent"
                        android:textColor="@drawable/selector_text2"
                        android:layout_weight="1"
                        android:text="Add Event"
                        android:fontFamily="@font/pr"
                        android:background="@drawable/selector_join"/>
                    <ImageButton
                        android:id="@+id/post_website"
                        android:layout_weight="0.1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_web2"
                        android:scaleType="centerCrop"
                        android:background="@color/transparent"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatAlert"

        android:src="@drawable/ic_addbutwhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="6dp"
        app:pressedTranslationZ="1dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        />
</android.support.design.widget.CoordinatorLayout>
