<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginLeft="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgfeed_data"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/post_pic"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_pic"
            android:fontFamily="sans-serif-light"
            android:text="Title"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_location"/>
            <TextView
                android:id="@+id/post_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/post_title"
                android:textColor="@color/grey_white"
                android:text="Address"
                android:textSize="12sp"
                android:paddingLeft="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_calendar"/>
            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_address"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey_white"
                android:text="Date"
                android:textSize="12sp"
                android:paddingLeft="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/clickmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_date"
            android:layout_gravity="end"
            android:clickable="true"
            android:text="อ่านต่อ.."
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:paddingBottom="10dp"/>


    </LinearLayout>

</RelativeLayout>