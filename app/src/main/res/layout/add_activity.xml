<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="16dp">


                <EditText

                    android:id="@+id/etitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pb"
                    android:textColor="@color/grey"
                    android:gravity="center"
                    android:hint="Title"
                    android:inputType="textAutoCorrect"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bgfeed">

                    <ImageButton
                        android:id="@+id/imgAc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_camera"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/edatest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/pb"
                        android:text="Start Date,Time"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/edateend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/pb"
                        android:text="End Date,Time"
                        android:textColor="@color/white" />

                </LinearLayout>

                <EditText
                    android:id="@+id/econtent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bgfeed"
                    android:fontFamily="@font/pr"
                    android:gravity="center"
                    android:hint="Content"
                    android:textColor="@color/grey"
                    android:inputType="textAutoCorrect"
                    android:textSize="25sp"
                    />

                <EditText
                    android:id="@+id/eplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pr"
                    android:textColor="@color/grey"
                    android:hint="สถานที่จัดงาน**"
                    android:inputType="text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/esponsor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pr"
                    android:textColor="@color/grey"
                    android:hint="ผู้จัดงาน"
                    android:inputType="text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/eurl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/pr"
                    android:hint="เว็ปไซต์เกี่ยวกับงาน"
                    android:inputType="text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/pr"
                    android:hint="เบอร์ติดต่อ"
                    android:inputType="text"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/send_But"
                    android:layout_width="200dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/selector_click2"
                    android:padding="16dp"
                    android:fontFamily="@font/pb"
                    android:text="Send"
                    android:textSize="35dp"
                    android:textAllCaps="false"
                    android:textColor="@drawable/btn_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>